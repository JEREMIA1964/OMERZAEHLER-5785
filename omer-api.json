{
  "openapi": "3.1.0",
  "info": {
    "title": "Sonnenuntergang API für OMER ZÄHLER 5785",
    "description": "Diese API dient der präzisen Berechnung der Sonnenuntergangszeit (Schkia) zur spirituellen Praxis des Omerzählens.\n\nSie ist Teil der WWAK-Initiative: Wissenschaft der Weisheit der Authentischen Kabbala (WWAK), inspiriert durch die Methode von Bnei Baruch.",
    "version": "2.1.0",
    "contact": {
      "name": "OMER ZÄHLER 5785 – WWAK Schülerprojekt"
    }
  ,
  "servers": [
    {
      "url": "https://api.sunrise-sunset.org",
      "description": "Sonnenuntergangs-API Server"
    }
  ],
  "paths": {
    "/json": {
      "get": {
        "summary": "Genaue Sonnenuntergangszeiten für einen bestimmten Ort und Tag",
        "description": "Liefert die exakte Zeit des Sonnenuntergangs (Schkia) für einen gegebenen Breiten- und Längengrad sowie Datum",
        "operationId": "getSunsetTime",
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "lng",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "formatted",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "enum": [0, 1],
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Erfolgreiche Anfrage mit Sonnenuntergangszeit",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SunsetResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SunsetResponse": {
        "type": "object",
        "properties": {
          "results": {
            "type": "object",
            "properties": {
              "sunset": {
                "type": "string"
              }
            }
          },
          "status": {
            "type": "string"
          }
        }
      }
    }
  }
}
